<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".MainActivity">

    <!-- This tag is for the top_mid button   -->
    <Button
        android:id="@+id/top_mid"
        android:layout_width="79dp"
        android:layout_height="74dp"
        android:background="?android:attr/selectableItemBackground"
        app:layout_constraintBottom_toBottomOf="@+id/top_line"
        app:layout_constraintLeft_toRightOf="@id/left_line"
        app:layout_constraintRight_toLeftOf="@id/right_line"
        app:layout_constraintTop_toTopOf="@+id/left_line"
        app:layout_constraintVertical_bias="0.38" />

    <!-- This tag displays the top horizontal line    -->
    <View
        android:id="@+id/top_line"
        android:layout_width="275dp"
        android:layout_height="5dp"
        android:background="#673AB7"
        app:layout_constraintBottom_toTopOf="@+id/bottom_line"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_2"
        app:layout_constraintVertical_bias="0.57" />

    <!-- This tag is for the top_right button   -->
    <Button
        android:id="@+id/top_right"
        android:layout_width="79dp"
        android:layout_height="74dp"
        android:background="?android:attr/selectableItemBackground"
        app:layout_constraintBottom_toTopOf="@+id/top_line"
        app:layout_constraintHorizontal_bias="0.25"
        app:layout_constraintLeft_toRightOf="@id/right_line"
        app:layout_constraintRight_toRightOf="@id/top_line"
        app:layout_constraintTop_toTopOf="@+id/left_line"
        app:layout_constraintVertical_bias="0.533" />

    <!-- This tag is for the bottom_right button   -->
    <Button
        android:id="@+id/bottom_right"
        android:layout_width="79dp"
        android:layout_height="74dp"
        android:background="?android:attr/selectableItemBackground"
        app:layout_constraintBottom_toBottomOf="@id/right_line"
        app:layout_constraintHorizontal_bias="0.25"
        app:layout_constraintLeft_toRightOf="@id/right_line"
        app:layout_constraintRight_toRightOf="@id/bottom_line"
        app:layout_constraintTop_toBottomOf="@+id/bottom_line"
        app:layout_constraintVertical_bias="1.0" />

    <!-- This tag is for the mid_right button   -->
    <Button
        android:id="@+id/mid_right"
        android:layout_width="79dp"
        android:layout_height="74dp"
        android:background="?android:attr/selectableItemBackground"
        app:layout_constraintBottom_toTopOf="@+id/bottom_line"
        app:layout_constraintHorizontal_bias="0.25"
        app:layout_constraintLeft_toRightOf="@id/right_line"
        app:layout_constraintRight_toRightOf="@id/bottom_line"
        app:layout_constraintTop_toBottomOf="@+id/top_line"
        app:layout_constraintVertical_bias="0.5" />

    <!-- This tag displays the bottom horizontal line    -->
    <View
        android:id="@+id/bottom_line"
        android:layout_width="275dp"
        android:layout_height="5dp"
        android:background="#673AB7"
        app:layout_constraintBottom_toBottomOf="@+id/left_line"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/top_line"
        app:layout_constraintVertical_bias="0.535" />

    <!-- This tag is for the bottom_mid button   -->
    <Button
        android:id="@+id/bottom_mid"
        android:layout_width="79dp"
        android:layout_height="74dp"
        android:background="?android:attr/selectableItemBackground"
        app:layout_constraintBottom_toBottomOf="@id/right_line"
        app:layout_constraintLeft_toRightOf="@id/left_line"
        app:layout_constraintRight_toLeftOf="@+id/right_line"
        app:layout_constraintTop_toBottomOf="@+id/bottom_line"
        app:layout_constraintVertical_bias="1.0" />

    <!-- This tag displays the left vertical line    -->
    <View
        android:id="@+id/left_line"
        android:layout_width="5dp"
        android:layout_height="252dp"
        android:layout_marginTop="68dp"
        android:background="#673AB7"
        app:layout_constraintHorizontal_bias="0.381"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/text_2" />

    <!-- This tag is for the middle button   -->
    <Button
        android:id="@+id/mid_mid"
        android:layout_width="79dp"
        android:layout_height="74dp"
        android:background="?android:attr/selectableItemBackground"
        app:layout_constraintBottom_toTopOf="@+id/bottom_line"
        app:layout_constraintLeft_toRightOf="@id/left_line"
        app:layout_constraintRight_toLeftOf="@id/right_line"
        app:layout_constraintTop_toBottomOf="@+id/top_line"
        app:layout_constraintVertical_bias="0.5" />

    <!-- This tag is for the bottom_left button   -->
    <Button
        android:id="@+id/bottom_left"
        android:layout_width="79dp"
        android:layout_height="74dp"
        android:background="?android:attr/selectableItemBackground"
        app:layout_constraintBottom_toBottomOf="@id/right_line"
        app:layout_constraintHorizontal_bias="0.75"
        app:layout_constraintLeft_toLeftOf="@id/bottom_line"
        app:layout_constraintRight_toLeftOf="@id/left_line"
        app:layout_constraintTop_toBottomOf="@+id/bottom_line"
        app:layout_constraintVertical_bias="0.5" />

    <!-- This tag is for the mid_left button   -->
    <Button
        android:id="@+id/mid_left"
        android:layout_width="79dp"
        android:layout_height="74dp"
        android:background="?android:attr/selectableItemBackground"
        app:layout_constraintBottom_toTopOf="@+id/bottom_line"
        app:layout_constraintHorizontal_bias="0.75"
        app:layout_constraintLeft_toLeftOf="@id/bottom_line"
        app:layout_constraintRight_toLeftOf="@id/left_line"
        app:layout_constraintTop_toBottomOf="@+id/top_line"
        app:layout_constraintVertical_bias="0.5" />

    <!-- This tag displays the right vertical line    -->
    <View
        android:id="@+id/right_line"
        android:layout_width="5dp"
        android:layout_height="252dp"
        android:layout_marginTop="68dp"
        android:background="#673AB7"
        app:layout_constraintHorizontal_bias="0.608"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/text_2" />

    <!-- This tag is for the top_left button   -->
    <Button
        android:id="@+id/top_left"
        android:layout_width="79dp"
        android:layout_height="74dp"
        android:background="?android:attr/selectableItemBackground"
        app:layout_constraintBottom_toTopOf="@+id/top_line"
        app:layout_constraintHorizontal_bias="0.625"
        app:layout_constraintLeft_toLeftOf="@id/top_line"
        app:layout_constraintRight_toLeftOf="@+id/left_line"
        app:layout_constraintTop_toTopOf="@+id/left_line"
        app:layout_constraintVertical_bias="0.545" />

    <!-- This tag displays winQuote from MainActivity.java -->
    <TextView
        android:id="@+id/textView1"
        android:layout_width="208dp"
        android:layout_height="93dp"
        android:gravity="center_horizontal"
        android:textAlignment="center"
        android:textColor="#673AB7"
        android:textSize="40sp"
        app:layout_constraintBottom_toTopOf="@+id/restart"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bottom_mid"
        app:layout_constraintVertical_bias="0.079" />

    <!-- This tag is for the bottom_mid button   -->
    <TextView
        android:id="@+id/ttt"
        android:layout_width="306dp"
        android:layout_height="67dp"
        android:gravity="center_horizontal"
        android:text="Tic Tac Toe!"
        android:textAlignment="center"
        android:textColor="#673AB7"
        android:textSize="50sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.024" />

    <!-- This tag displays the smaller text below "Tic Tac Toe" at the top of the screen  -->
    <TextView
        android:id="@+id/text_2"
        android:layout_width="303dp"
        android:layout_height="45dp"
        android:gravity="center_horizontal"
        android:text="A fun game of tic-tac-toe (aka X and O) played between two people"
        android:textAlignment="center"
        android:textColor="#673AB7"
        android:textSize="15sp"
        app:layout_constraintBottom_toTopOf="@id/top_mid"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ttt"
        app:layout_constraintVertical_bias="0.05" />

    <!-- This tag is for the RESTART button at the bottom of the screen  -->
    <Button
        android:id="@+id/restart"
        android:layout_width="265dp"
        android:layout_height="47dp"
        android:text="Restart"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintVertical_bias="0.976" />

</androidx.constraintlayout.widget.ConstraintLayout>